.bottom-nav {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  border-top: 1px solid #ccc;
  z-index: 999;
}

.nav-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.nav-item.selected {
  color: red;
  border-radius: 25px;
  background-color: rgba(255, 0, 0, 0.1);
}

.nav-item text {
  font-size: 16px;
}

button.nav-item {
  background: none;
  border: none;
  padding: 0;
  font-size: 16px;
}
